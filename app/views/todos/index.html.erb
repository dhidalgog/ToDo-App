<h1> ToDo Index </h1>

<div class="row">
  <div class="col-md-8">
    <div class="card text-white border-primary">
      <ul class="list-group list-group-flush">
        <% @todos.each do |todo| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <p class="card-text"><%= todo.description %></p>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to "Show", todo_path(todo), class:'btn btn-primary' %>
              <%= link_to "Edit", todo_edit_path(todo), class:'btn btn-info' %>
              <%= link_to "Delete", todo_destroy_path(todo), method: :delete, class:'btn btn-warning' %>
              <%= link_to "Complete", todo_complete_path(todo), class:'btn btn-secondary' %>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
    <br>
  <%= link_to "New ToDo", todos_new_path, class: "btn btn-primary" %>
  </div>
</div>



